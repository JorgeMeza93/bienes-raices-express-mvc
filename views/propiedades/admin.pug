extends ../layout/index
block contenido
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center") BienesRa√≠ces 
            span(class="font-normal") Pipo
        h2.text-center.text-2xl.font-extrabold Mis Propiedades
        a(href="/propiedades/crear" class="rounded py-2 px-10 bg-indigo-600 hover:bg-indigo-700 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full md:w-auto" ) Publicar Propiedad
        if propiedades.length
            div(class="bg-white shadow rounded-lg")
                ul(class="divide-y divide-gray-200")
                    each propiedad in propiedades
                        li
                            div(class="p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-8 gap-4")
                                div(class="sm:w-1/4 md:w-1/6")
                                    img(src=`uploads/${propiedad.imagen}` alt=`imagen de la propiedad ${propiedad.titulo}` class="w-full block")
                                div(class="sm:w-2/4 md:w-3/6 lg:w-4/6")
                                    a(class="block text-2xl font-extrabold text-indigo-600 truncate" href="#")= propiedad.titulo
                                    p(class="text-sm text-black font-bold")= propiedad.categoria.nombre
                                div(class="sm:w-1/4 md:w-2/6 lg:w-1/6")
        else
            p(class="text-center") No hay Propiedades
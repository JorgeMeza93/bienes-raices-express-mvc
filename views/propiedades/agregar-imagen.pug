extends ../layout/index
block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
block contenido
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center") BienesRa√≠ces 
            span(class="font-normal") Pipo
        h2.text-center.text-2xl.font-extrabold Subir Imagen
        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg
        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(class="space-y-8" method="POST" action="/propiedades/crear" )
                input(type="hidden" name="_csrf" value=csrfToken)
                div(class="space-y-5")
                    input(type="submit" class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer" value="Publicar Propiedad")    
